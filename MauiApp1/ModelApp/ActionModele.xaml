<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ModelApp.ActionModele">

    <Border StrokeShape="RoundRectangle 3" Background="#BFCBD0" StrokeThickness="2">
        <!--der.Stroke>
            <LinearGradientBrush>
                <GradientStop Color="Black"/>
            </LinearGradientBrush>
        </Border.Stroke-->
        <HorizontalStackLayout>
            <Border StrokeShape="RoundRectangle 15" StrokeThickness="2">
            <Image x:Name="ImgIcon" WidthRequest="24" 
                   HeightRequest="24" 
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   Margin="10"/>
            </Border>
            <StackLayout Orientation="Vertical" Spacing="0">
                <Label x:Name="TitleLabel" FontSize="20" TextColor="Black" FontAttributes="Bold"/>
                <Label x:Name="DescLabel" FontSize="15"/>
            </StackLayout>
            <Label x:Name="SommeLabel" FontSize="18" TextColor="Grey" Margin="20"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>
